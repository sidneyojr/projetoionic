    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Iniciar a Extensão",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "npm"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "pwa-chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },



        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Open home.page.html",
            "file": "/home/sidney/ionic/meuapp/src/app/home/home.page.html"
        }
    ]
}